<% if notice %>
<div class='alert alert-success mt-4'>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  <%= notice %>
</div>
<% end %>

<% if alert %>
<div class='alert alert-danger mt-4'>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  <%= alert %>
</div>
<% end %>